{% extends 'base.html.twig' %}

{% block body %}

<div class="col-sm-3 col-md-3 col-lg-3 formulaire">
{{form_start(searchform)}}
{{ form_widget(searchform) }}
        <input type="submit" value="Rechercher" />
    {{ form_end(searchform) }}
</div>
<div class="col-sm-9 col-md-9 col-lg-9 list">
    <h1>Products list</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ref</th>
                <th>Name</th>
                <th>Description</th>
                <th>Isenabled</th>
                <th>Ispremium</th>
                <th>Price</th>
                <th>Note</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td>{{ product.ref }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{% if product.isEnabled %}Yes{% else %}No{% endif %}</td>
                <td>{% if product.isPremium %}Yes{% else %}No{% endif %}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.note }}</td>
                <td>{% if product.createdAt %}{{ product.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if product.updatedAt %}{{ product.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('product_show', { 'id': product.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('product_edit', { 'id': product.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <ul>
        <li>
            <a href="{{ path('product_new') }}">Create a new product</a>
        </li>
    </ul>
</div>
{% endblock %}
 
 
 
 {% block form %}
 <h1>Product creation</h1>

    {{ form_start(searchForm) }}
        {{ form_widget(searchForm) }}
        <input type="submit" value="Create" />
    {{ form_end(searchForm) }}
{% endblock %}